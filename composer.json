{
    "name": "ben-gibson/lifx-client",
    "type": "library",
    "description": "A php client library for the Lifx HTTP api.",
    "keywords": [
        "ben-gibson",
        "lifx-client"
    ],
    "homepage": "https://github.com/ben-gibson/lifx-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Gibson",
            "email": "ben.gibson.2011@gmail.com",
            "homepage": "https://github.com/ben-gibson",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "beberlei/assert": "^2.7",
        "guzzlehttp/guzzle": "~6.0",
        "liampm/swaddle": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit" : "~6.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Gibbo\\Lifx\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gibbo\\LifxTest\\Unit\\": "tests/unit"
        }
    },
    "scripts": {
        "test": "phpunit -v",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
